<div class="row">
  <div class="card col-md-6 login">

    <form class="form login-form">
      <h2 class="card-title pt-2">Login</h2>
      <div class="form-group">
        <label class="form-label" for="email-login">email:</label>
        <input class="form-input form-control" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label class="form-label" for="password-login">password:</label>
        <input
          class="form-input form-control"
          type="password"
          id="password-login"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-2" type="submit">Log In</button>
      </div>
      <div class="signup-option mt-3">
        <p>Not a member?</p>
        <button class="signupSelect btn btn-success">Sign Up Now!</button>
      </div>
    </form>

  </div>
  <div class="card col-md-6 signup">
    <h2 class="card-title pt-2">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label class="form-label" for="name-signup">name:</label>
        <input class="form-input form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label class="form-label" for="email-signup">email:</label>
        <input class="form-input form-control" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label class="form-label" for="password-signup">password:</label>
        <input
          class="form-input form-control"
          type="password"
          id="password-signup"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-2" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="js/login.js"></script>