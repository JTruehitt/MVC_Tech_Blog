<div class="posts-container text-center">
  <div class="posts-header">
    <h2 class="text-white">Current Posts:</h2>
    </div>
  {{#each posts as |post|}}
    <div class="card my-3">
      <div class=" card-header post-header pb-0">
          <h5 class="">{{post.title}}</h5>
          <p class="date-text">Posted by {{post.user.user_name}} on {{post.createdAt}}</p>
      </div>
      <div class="card-body">

        <p class="card-text">{{post.description}}</p>
        <a href="#" class="btn btn-primary">Add Comment</a>
      </div>
      </div>
  {{/each}}
</div>